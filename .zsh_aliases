# nav aliases
alias code="vim -o \`fzf\`"
alias cvim="cd ~/.config/nvim"
alias comz="cd ~/.oh-my-zsh/"
alias cspe="cd ~/.config/.spectrwm/"
alias "."="cd .."
alias ".."="cd ../.."
alias "/"="cd"
alias "?"="alias | fzf"
alias ".his"="history | fzf"

# fzf aliases
alias e="fzf | xargs vi"
alias f="fzf | xargs cd"

# git aliases
alias ggs="git status"
alias gbr="git branch"
alias gga="git add ."
alias ggc="git commit"
alias ggh="git push"
alias ggl="git pull"
alias ggd="git diff"
alias ggo="git log"
alias ggm="git blame"

function ggu {
  git add .
  git commit -m "$1"
  git push
}

